#contact
  .row
    .col-lg-6.image-contact
      .layer
      .contact-buttons.text-center
        .btn.btn-theme-outline
          = image_tag 'in.png', class: "icon-white icon-contact", title: 'Linked In'
        .btn.btn-theme-outline
          = image_tag 'soundcloud.png', class: "icon-white icon-contact"
        .btn.btn-theme-outline
          = image_tag 'shift.png', class: "icon-white icon-contact"
        .btn.btn-theme-outline
          = image_tag 'git.png', class: "icon-white icon-contact"

    .col-lg-6.darker-bg
      .contact-form
        %h3.title-lg.light.wow.fadeInDown Contact
        = form_for @message, remote: true, id: 'contact-form', url: messages_path do |f|
          .row
            .col-md-6
              .form-group
                .error
                = f.text_field  :name, required: true, placeholder: "Nom", class: "form-control"
            .col-md-6
              .form-group
                = f.text_field  :firstname, required: true, placeholder: "Pr√©nom", class: "form-control"
          .row
            .col-md-12
              .form-group.text-white
                = f.email_field :email, required: true,placeholder: "Email" ,class: "form-control"
          .row
            .col-md-12
              .form-group
                = f.text_area :body,  required: true, placeholder: 'Message', class: "form-control"
          .row
            .col-md-12
              %button.submit.btn.btn-theme.wow.fadeInDown{'data-wow-offset': 0}
                %span.initial-content Envoyer
                %span.sending-content.hide
                  = image_tag 'three-dots.svg', class: 'loading-svg'
                %span.sent-content.hide Merci !

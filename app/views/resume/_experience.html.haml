#experience
  .container
    .row
      .col-lg-12
        %h3.title-lg.mb-5.wow.bounceInLeft
          Exp√©rience
    - @experiences.where(experience_type: 0).each do |work|
      .row.resume-card.wow.bounceInLeft
        .col-lg-3.location-date.light
          %h5.location-title= work.location
          %h6
            - if work.start_date.year != work.end_date.year
              = work.start_date.year
              = ' - '
            = work.end_date.year
        .col-lg-9.bg-white.description
          %h4.experience-title.mb-5= work.title
          %p= work.description
          .mb-5
          - work.skills.order(:priority).each do |s|
            .tag.wow.fadeInLeft= s.name

